<!DOCTYPE html>



<head>
  <title>FitFinder</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <script src="./friends.js"></script>

  <script src="../global/js/global.js"></script>
  <link rel="apple-touch-icon" href="../global/img/fitfinder/favicon.png">
  <link rel="shortcut icon" type="image/x-icon" href="../global/img/fitfinder/favicon.png">
  <!-- Load Require CSS -->
  <link href="../global/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font CSS -->
  <link href="../global/css/boxicon.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
  <!-- Load Tempalte CSS -->
  <link rel="stylesheet" href="../global/css/templatemo.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="../global/css/custom.css">

  <!-- Bootstrap -->
  <script src="../global/js/bootstrap.bundle.min.js"></script>
  <!-- Load jQuery require for isotope -->
  <script src="../global/js/jquery.min.js"></script>
  <!-- Isotope -->
  <script src="../global/js/isotope.pkgd.js"></script>
  <!-- Page Script -->
  <script>
      $(window).load(function () {
          // init Isotope
          var $projects = $('.projects').isotope({
              itemSelector: '.project',
              layoutMode: 'fitRows'
          });
          $(".filter-btn").click(function () {
              var data_filter = $(this).attr("data-filter");
              $projects.isotope({
                  filter: data_filter
              });
              $(".filter-btn").removeClass("active");
              $(".filter-btn").removeClass("shadow");
              $(this).addClass("active");
              $(this).addClass("shadow");
              return false;
          });
      });
  </script>
</head>

<body>
  <!-- Header -->
  <nav id="main_nav" class="navbar navbar-expand-lg navbar-light bg-white shadow">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand h1" href="/profile">
        <span class="text-dark h4">Fit</span><span class="h4 finder">Finder</span>
      </a>
      <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbar-toggler-success" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between"
        id="navbar-toggler-success">
        <div class="mx-xl-9 mb-2">
          <ul class="nav navbar-nav d-flex justify-content-between mx-xl-5 text-center text-dark">
            <li class="nav-item" style="padding: 10px; ">
              <a class="nav-link btn-outline-primary rounded-pill px-3" href="/profile">Profile</a>
            </li>
            <li class="nav-item" style="padding: 10px">
              <a class="nav-link btn-outline-primary rounded-pill px-3" href="/logger">Exercise
                Log</a>
            </li>
            <li class="nav-item" style="padding: 10px">
              <a class="nav-link btn-outline-primary rounded-pill px-3" href="/friends">Friends</a>
            </li>
            <li class="nav-item" style="padding: 10px">
              <a class="nav-link btn-outline-primary rounded-pill px-3" href="/chat">Chat</a>
            </li>
            <li class="nav-item" style="padding: 10px">
              <a class="nav-link btn-outline-primary rounded-pill px-3" href="/buddy">Find a Buddy</a>
            </li>
            <li class="nav-item" style="padding: 10px">
              <a class="nav-link btn-outline-primary rounded-pill px-3" onclick="logout()">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <!-- Close Header -->
  <center>
    <br>
    <h2 class="h3 text-center col-12 py-5 semi-bold-600">Friend Requests</h2>
    <% for (i=0; i < friendRequests.length; i++){ %>
      <% if (i % 3===0) { %>
        <div class="d-flex flex-row justify-content-center">
          <% }; %>

            <div class="p-2">
              <div class="card" style="width: 18rem; border-radius: 0.75rem">
                <img class="card-img-top" src="<%-friendRequests[i].profile_image%>"
                  alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title">@<%-friendRequests[i].username%>
                  </h5>
                  <p style="max-height: 100px; height: 100%; overflow-y: scroll;">
                    <%-friendRequests[i].bio%>
                  </p>
                  <button class="btn btn-primary" onclick="acceptRequest(this.value)"
                    value="<%-friendRequests[i].username%>">Accept Friend Request</button>
                </div>
              </div>
            </div>

            <% if (i % 3===2 || i===friendRequests.length - 1) { %>
        </div>
        <% }; %>
          <% }; %>
            <p></p>
            <h2 class="h3 text-center col-12 py-5 semi-bold-600">Send A Friend Request</h2>
            <form onsubmit="return false">
              <input type="text" class="form-control light-300" id="request" name="inputpassword"
                placeholder="Username">
              <button class="btn btn-primary rounded-pill btn-block shadow px-3 py-2" type="submit"
                onclick="sendRequest()">Request</button>
            </form>

            <h2 class="h3 text-center col-12 py-5 semi-bold-600">Your Friends</h2>

            <% for (i=0; i < friends.length; i++){ %>
              <% if (i % 3===0) { %>
                <div class="d-flex flex-row justify-content-center">
                  <% }; %>

                    <div class="p-2">
                      <div class="card" style="width: 18rem; border-radius: 0.75rem">
                        <img class="card-img-top" src="<%-friends[i].profile_image %>"
                          alt="Card image cap">
                        <div class="card-body">
                          <h5 class="card-title">
                            <%-friends[i].name%>
                          </h5>
                          <p style="max-height: 100px; height: 100%; overflow-y: scroll;">
                            <%-friends[i].bio%>
                          </p>
                        </div>
                      </div>
                    </div>

                    <% if (i % 3===2 || i===friends.length - 1) { %>
                </div>
                <% }; %>
                  <% }; %>

</body>

</html>